---
import Layout from "../../layouts/Layout.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import ScrollReveal from "../../components/ScrollReveal.tsx";
import { SITE } from "../../config/site.mjs";
---

<Layout
  title={`Blog | ${SITE.title}`}
  description="技術ブログと日記を分けて掲載します。"
  canonicalURL={`${SITE.url}/blog`}
>
  <Header />
  <main id="main-content" role="main">
    <section class="max-w-4xl mx-auto px-4 py-20">
      <ScrollReveal client:idle>
        <h1 class="text-4xl font-bold text-gray-900 mb-4">Blog</h1>
      </ScrollReveal>
      <ScrollReveal client:load delay={0.1}>
        <p class="text-lg text-gray-600 mb-10">
          技術ブログと日記を分けて書いています。
        </p>
      </ScrollReveal>

      <div class="grid md:grid-cols-2 gap-6">
        <ScrollReveal client:load delay={0.2}>
          <a
            href="/blog/tech"
            class="block rounded-2xl border border-gray-200 bg-white p-6 shadow-sm hover:shadow-lg transition-shadow"
          >
            <h2 class="text-xl font-semibold text-gray-900">技術ブログ</h2>
            <p class="mt-2 text-gray-600">開発メモや技術的な話題。</p>
          </a>
        </ScrollReveal>
        <ScrollReveal client:load delay={0.3}>
          <a
            href="/blog/diary"
            class="block rounded-2xl border border-gray-200 bg-white p-6 shadow-sm hover:shadow-lg transition-shadow"
          >
            <h2 class="text-xl font-semibold text-gray-900">日記</h2>
            <p class="mt-2 text-gray-600">日々の記録。</p>
          </a>
        </ScrollReveal>
      </div>
    </section>
  </main>
  <Footer />
</Layout>
