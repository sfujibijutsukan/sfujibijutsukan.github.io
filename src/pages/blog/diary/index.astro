---
import Layout from "../../../layouts/Layout.astro";
import Header from "../../../components/Header.astro";
import Footer from "../../../components/Footer.astro";
import { getCollection } from "astro:content";
import { SITE } from "../../../config/site.mjs";

const entries = (await getCollection("diary"))
  .filter((entry) => !entry.data.draft)
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());
---

<Layout
  title={`Diary | ${SITE.title}`}
  description="日記一覧"
  canonicalURL={`${SITE.url}/blog/diary`}
>
  <Header />
  <main id="main-content" class="mx-auto max-w-3xl px-6 py-12">
    <header class="mb-8">
      <h1 class="text-3xl font-semibold text-gray-900">日記</h1>
      <p class="mt-2 text-gray-600">日々の記録。</p>
    </header>

    {entries.length === 0 ? (
      <p class="text-gray-600">まだ記事がありません。</p>
    ) : (
      <ul class="space-y-6">
        {entries.map((entry) => (
          <li class="rounded-2xl border border-gray-200 bg-white p-6 shadow-sm">
            <p class="text-sm text-gray-500">
              <time datetime={entry.data.date.toISOString()}>
                {entry.data.date.toLocaleDateString("ja-JP")}
              </time>
            </p>
            <h2 class="mt-2 text-xl font-semibold text-gray-900">
              <a class="hover:underline" href={`/blog/diary/${entry.slug}/`}>
                {entry.data.title}
              </a>
            </h2>
            {entry.data.description && (
              <p class="mt-2 text-gray-600">{entry.data.description}</p>
            )}
          </li>
        ))}
      </ul>
    )}
  </main>
  <Footer />
</Layout>
