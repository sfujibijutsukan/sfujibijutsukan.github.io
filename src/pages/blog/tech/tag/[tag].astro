---
import Layout from "../../../../layouts/Layout.astro";
import Header from "../../../../components/Header.astro";
import Footer from "../../../../components/Footer.astro";
import { getCollection } from "astro:content";
import { SITE } from "../../../../config/site.mjs";

const normalizeTag = (tag) => tag.trim().toLowerCase();

export async function getStaticPaths() {
  const entries = (await getCollection("tech")).filter(
    (entry) => !entry.data.draft
  );
  const tags = Array.from(
    new Set(entries.flatMap((entry) => entry.data.tags ?? []))
  );

  return tags.map((tag) => ({
    params: { tag: encodeURIComponent(tag) },
    props: { tag },
  }));
}

const { tag } = Astro.props;
const selectedTagNormalized = normalizeTag(tag);

const entries = (await getCollection("tech"))
  .filter((entry) => !entry.data.draft)
  .filter((entry) =>
    (entry.data.tags ?? []).some(
      (entryTag) => normalizeTag(entryTag) === selectedTagNormalized
    )
  )
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());
---

<Layout
  title={`${tag} | Tech Blog | ${SITE.title}`}
  description={`タグ: ${tag} の技術ブログ一覧`}
  canonicalURL={`${SITE.url}/blog/tech/tag/${encodeURIComponent(tag)}`}
>
  <Header />
  <main id="main-content" class="mx-auto max-w-3xl px-6 py-12">
    <header class="mb-8">
      <p class="text-sm font-semibold text-gray-500">Tag</p>
      <h1 class="mt-2 text-3xl font-semibold text-gray-900">{tag}</h1>
      <p class="mt-2 text-gray-600">タグ「{tag}」の記事一覧。</p>
      <div class="mt-4">
        <a
          href="/blog/tech"
          class="text-sm text-gray-600 hover:text-gray-900 underline"
        >
          一覧へ戻る
        </a>
      </div>
    </header>

    {entries.length === 0 ? (
      <p class="text-gray-600">まだ記事がありません。</p>
    ) : (
      <ul class="space-y-6">
        {entries.map((entry) => (
          <li class="rounded-2xl border border-gray-200 bg-white p-6 shadow-sm">
            <p class="text-sm text-gray-500">
              <time datetime={entry.data.date.toISOString()}>
                {entry.data.date.toLocaleDateString("ja-JP")}
              </time>
            </p>
            <h2 class="mt-2 text-xl font-semibold text-gray-900">
              <a class="hover:underline" href={`/blog/tech/${entry.slug}/`}>
                {entry.data.title}
              </a>
            </h2>
            {entry.data.description && (
              <p class="mt-2 text-gray-600">{entry.data.description}</p>
            )}
            {entry.data.tags && entry.data.tags.length > 0 && (
              <ul class="mt-3 flex flex-wrap gap-2">
                {entry.data.tags.map((entryTag) => (
                  <li>
                    <a
                      href={`/blog/tech/tag/${encodeURIComponent(entryTag)}/`}
                      class="text-xs rounded-full bg-gray-100 px-2 py-1 text-gray-600 hover:bg-gray-200"
                    >
                      {entryTag}
                    </a>
                  </li>
                ))}
              </ul>
            )}
          </li>
        ))}
      </ul>
    )}
  </main>
  <Footer />
</Layout>
