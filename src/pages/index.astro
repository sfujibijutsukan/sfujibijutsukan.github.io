---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Hero from "../components/Hero.astro";
import Features from "../components/Features.astro";
import Footer from "../components/Footer.astro";
import { SITE } from "../config/site.mjs";
---

<Layout
  title={SITE.title}
  description="A minimal, modern starter template for building fast websites with Astro. Includes React, Tailwind CSS, Framer Motion, and more."
  canonicalURL={SITE.url}
>
  <Header />
  <main id="main-content" role="main">
    <Hero />
    <Features />
    <section class="max-w-6xl mx-auto px-4 pb-20">
      <div class="rounded-2xl border border-gray-200 bg-white p-8 shadow-sm">
        <div class="flex flex-col gap-6 md:flex-row md:items-center md:justify-between">
          <div>
            <h2 class="text-3xl font-semibold text-gray-900">Blog</h2>
            <p class="mt-2 text-gray-600">技術ブログと日記を分けて掲載しています。</p>
          </div>
        </div>
        <div class="mt-6 grid gap-4 md:grid-cols-2">
          <a
            href="/blog/tech"
            class="rounded-xl border border-gray-200 bg-gray-50 p-5 hover:bg-gray-100 transition-colors"
          >
            <h3 class="text-lg font-semibold text-gray-900">技術ブログ</h3>
            <p class="mt-1 text-gray-600">開発メモや技術的な話題。</p>
          </a>
          <a
            href="/blog/diary"
            class="rounded-xl border border-gray-200 bg-gray-50 p-5 hover:bg-gray-100 transition-colors"
          >
            <h3 class="text-lg font-semibold text-gray-900">日記</h3>
            <p class="mt-1 text-gray-600">日々の記録。</p>
          </a>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>
