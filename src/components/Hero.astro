---
import ScrollReveal from "./ScrollReveal.tsx";
import { Icon } from "astro-icon/components";
---

<section class="max-w-6xl mx-auto px-4 py-20 md:py-32 text-center" aria-labelledby="hero-heading">
  <ScrollReveal client:load>
    <h1 id="hero-heading" class="text-5xl md:text-6xl font-bold text-gray-900 mb-6">
      sfujibijutsukan
    </h1>
  </ScrollReveal>
  <ScrollReveal client:load delay={0.2}>
    <p class="text-xl md:text-2xl text-gray-600 mb-8 max-w-2xl mx-auto">
      新しい美術館へようこそ。
    </p>
  </ScrollReveal>
  <ScrollReveal client:load delay={0.4}>
    <div class="flex flex-col sm:flex-row gap-4 justify-center">
      <a
        href="/apps"
        class="inline-flex items-center gap-2 px-8 py-3 bg-white text-gray-900 border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors font-medium"
      >
        <Icon name="tabler:apps" class="w-5 h-5" aria-hidden="true" />
        <span>Apps</span>
      </a>
      <a
        href="/blog"
        class="inline-flex items-center gap-2 px-8 py-3 bg-white text-gray-900 border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors font-medium"
      >
        <Icon name="tabler:book" class="w-5 h-5" aria-hidden="true" />
        <span>Blog</span>
      </a>
      <a
        href="/contact"
        class="inline-flex items-center gap-2 px-8 py-3 bg-black text-white rounded-lg hover:bg-gray-800 transition-colors font-medium"
      >
        <Icon name="tabler:mail" class="w-5 h-5" aria-hidden="true" />
        <span>Contact</span>
      </a>
    </div>
  </ScrollReveal>
</section>
